<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <LinearLayout
            style="@style/wrap_layout">
            <!-- 上圆角-->
            <LinearLayout
                android:id="@+id/personInfo"
                style="@style/top_layout">


                <TextView
                    style="@style/usertext"
                    android:text="账号安全"/>

                <ImageView style="@style/img_arrow"
                    android:contentDescription="@string/desc"/>
            </LinearLayout>

            <!-- 分割线 -->
            <View
                style="@style/bg_line"
                android:layout_height="1dp"/>
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout"
                android:id="@+id/mySchedule">

                <TextView
                    style="@style/usertext"
                    android:text="消息通知"/>

                <ImageView style="@style/img_arrow"
                    android:contentDescription="@string/desc"/>
            </LinearLayout>

            <!-- 分割线 -->
            <View
                style="@style/bg_line"
                android:layout_height="1dp"/>     <!-- 分割线 -->

            <!-- 无圆角-->
            <LinearLayout
                android:id="@+id/myRanking"
                style="@style/mid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/usertext"
                    android:text="隐私" />

                <ImageView
                    style="@style/img_arrow"
                    android:contentDescription="@string/desc" />
            </LinearLayout>

            <View
                style="@style/bg_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/myPartner"
                style="@style/mid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/usertext"
                    android:text="通用" />

                <ImageView
                    style="@style/img_arrow"
                    android:contentDescription="@string/desc" />

            </LinearLayout>

            <View
                android:id="@+id/view9"
                style="@style/bg_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/me_share"
                style="@style/mid_layout">

                <TextView
                    style="@style/usertext"
                    android:text="关于与帮助" />

                <ImageView
                    style="@style/img_arrow"
                    android:contentDescription="@string/desc" />
            </LinearLayout>
            <!-- 分割线 -->
            <!-- 无圆角-->

            <View
                style="@style/bg_line"
                android:layout_height="1dp"/>
            <!-- 下圆角-->
            <LinearLayout
                android:id="@+id/feedback"
                style="@style/bottom_layout">

                <TextView
                    style="@style/usertext"
                    android:text="清除缓存" />

                <ImageView
                    style="@style/img_arrow"
                    android:contentDescription="@string/desc" />
            </LinearLayout>

        </LinearLayout>


        <View
            style="@style/bg_line"
            android:layout_height="1dp"/>

        <!-- 全圆角-->
        <LinearLayout style="@style/wrap_layout">

            <LinearLayout style="@style/single_layout"
                android:id="@+id/setUp">

                <TextView
                    style="@style/usertext"
                    android:text="用户协议"/>

                <ImageView style="@style/img_arrow"
                    android:contentDescription="@string/desc"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="?attr/colorPrimary"
            android:text="@string/quit"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>