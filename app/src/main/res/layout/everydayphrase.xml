<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/everyday_phrase_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日一句——4月5日"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/space_20dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            >

            <ImageView
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner_3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/everyday_phrase1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="  我现在所做的一切，都是为了追求更加完美。"
            android:layout_gravity="center"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/everyday_phrase_author1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" 科比·布莱恩特"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/everyday_phrase_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日一句——4月4日"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/space_20dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            >

            <ImageView
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner_3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/everyday_phrase2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="  谁也不是佐敦，我只做我自己…… "
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/everyday_phrase_author2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" 科比·布莱恩特"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/everyday_phrase_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日一句——4月3日"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/space_20dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            >

            <ImageView
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner_3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/everyday_phrase3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="  我从来没打算退缩，我的字典没有妥协。"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:layout_gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/everyday_phrase_author3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" 科比·布莱恩特"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:textStyle="bold"
            android:textColor="@color/cal_text_normal"
            android:textSize="16sp" />

    </LinearLayout>







</LinearLayout>