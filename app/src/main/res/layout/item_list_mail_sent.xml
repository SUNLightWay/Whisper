<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/space_20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_10dp"
    android:layout_marginRight="@dimen/space_10dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <!--listview里的每一个Item的显示-->

        <RelativeLayout
            android:id="@+id/letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <!--你是谁和前往按钮-->
            <TextView
                android:id="@+id/mail_sent_title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="你是谁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!--显示在"你是谁的右面使用的margin_left来实现？？"-->
            <ImageView
                android:id="@+id/mail_sent_detail_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="270dp"
                android:src="@drawable/go"/>
        </RelativeLayout>
        <!--用于显示内容-->
        <TextView
            android:id="@+id/mail_sent_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <!--来自哪里和日期-->
            <TextView
                android:id="@+id/mail_sent_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="From XXXX"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/mail_sent_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:text="已到达"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/mail_sent_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:text="2020/2/3"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
