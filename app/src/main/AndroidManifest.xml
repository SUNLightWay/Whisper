            android:name=".ui.find.DeskMate.DeskmateActivity"
            android:label="同桌" />
        <activity
            android:name=".ui.find.DeskMate.DeskMateFindActivity"
            android:label="寻找同桌" /> <!-- 同桌end -->

        <activity android:name=".DiscoveryActivity" />
        <activity
            android:name=".WriteMailActivity"
            android:label="写信" />
        <activity
            android:name=".PlanDetailActivity"
            android:label="计划详情" />

        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IncreasePlanActivity"
            android:label="@string/title_activity_increase_plan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".ScheduleChartActivity"
            android:label="日程表" />

        <activity android:name=".ScheduleChartBaseActivity" />
